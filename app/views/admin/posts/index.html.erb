<h1>Welcome to the admin panel!</h1>

<%= link_to "New Post", new_admin_post_url %>

<% if @posts.any? %>
  <h4>All posts:</h4>
  <table>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to "#{post.title}", admin_post_path(post), id: "#{post.id}show" %></td>
        <td>
          <%= link_to "Edit", edit_admin_post_path(post), id: post.id %>
          <%= link_to "Delete", admin_post_path(post), id: "#{post.id}delete", :method => :delete, :confirm => "Are you sure you want to delete this post?" %>
        </td>
      </tr>
    <% end %>
  </table
<% end %>
